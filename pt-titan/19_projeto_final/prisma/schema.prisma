generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Relação 1:N com Meal
  meals Meal[]

  @@map("users")
}

model Meal {
  id          String   @id @default(uuid())
  name        String
  description String
  onDiet      Boolean // Referencia se a refeição está dentro da dieta
  createdAt   DateTime @default(now()) @map("created_at")
  upatedAt    DateTime @updatedAt @map("updated_at")

  // Chave estrangeira e relação
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("meals")
}
