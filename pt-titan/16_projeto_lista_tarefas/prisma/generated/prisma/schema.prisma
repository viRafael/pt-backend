generator client {
  provider = "prisma-client-js"
  output   = "./generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Task {
  id            String   @id @default(uuid())
  descricao     String
  criada_em     DateTime @default(now())
  atualziada_em DateTime @updatedAt

  @@map("tasks")
}
